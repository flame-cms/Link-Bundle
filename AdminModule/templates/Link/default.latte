{#content}

	<div class="left">
		<h2 n:block="title">Links</h2>
	</div>
	<div class="right">
		<a class="btn btn-large btn-primary" n:href="update"><i class="icon-plus-sign icon-white"></i> Add new link</a>
	</div>

	<br class="clear" /> <hr />

	{snippet links}
		{if count($links)}
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>Title</th>
                <th>Url</th>
                <th>Views</th>
                <th>Show</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            <tr n:foreach="$links as $link">

                <td>{$link->name}</td>
                <td><a href="{$link->url}" target="_blank">{$link->url}</a></td>
                <td>{$link->hit}</td>
                <td>{if $link->public}YES{else}NO{/if}</td>
                <td>
                    <div class="btn-group">
                        <a rel="tooltip" class="btn btn-small" n:href="update $link->id"><i class="icon-edit"></i> Edit</a>
                        <a rel="tooltip" class="btn btn-small btn-danger" n:href="delete! $link->id"><i class="icon-trash icon-white"></i> Delete</a>
                    </div>
                </td>
            </tr>

            </tbody>

        </table>
		{else}
			<h4>None</h4>
		{/if}
	{/snippet}

{/#}