{#content}

	<h2 n:block="title">Links</h2>

	{if count($links)}
		<ul>
			{foreach $links as $link}
				{if $link->public}
					<li><a n:href="redirect $link->url" target="_blank">{$link->name}</a><br />
						{$link->description} ({$link->hit} views)</li>
				{/if}
			{/foreach}
		</ul>
	{else}
		<h4>None</h4>
	{/if}
{/#}